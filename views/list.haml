  %body
    %header
      %div.container
        %div.sixteen.columns
          %h1
            %a{:href => "/"} Creative Works
    %nav
      %div.container
        %div.sixteen.columns
          %ul
            %li{:class => "#{if request.path == "/" then "active" end}"}
              %a{:href => "/"} Home
