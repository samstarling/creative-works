              %a{:href => "/about/http%3A%2F%2Fwww.bbc.co.uk%2Fthings%2Fbb2d8784-45cb-4358-b506-7832b01831fd%23id"} Cricket
            %li{:class => "#{if request.path == "/about/http%3A%2F%2Fwww.bbc.co.uk%2Fthings%2Fb773195a-9880-4773-88d4-50d36260fe12%23id" then "active" end}"}
